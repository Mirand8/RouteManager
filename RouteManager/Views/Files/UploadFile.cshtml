@{
    ViewData["Title"] = "Importar arquivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Importar Documento</h1>

using (Html.BeginForm("UploadFile", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
{    
	<div class="text-center">
		<h4 class="display-4">Importar Rotas</h4>
		<br/>
			<div class="form-group">
				<input class="form-control" type="file" name="file" />
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Importar" class="btn btn-primary" />
			</div>
	</div>
}