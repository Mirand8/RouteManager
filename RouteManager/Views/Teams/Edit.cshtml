@model RouteManager.Models.TeamViewModel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Times</h1>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <h3>Membros do Time: (Selecione para remover do time)</h3>
                <label asp-for="Members" class="control-label"></label><br />
                @foreach (var person in @Model.Members)
                {
                    <input name="checkedMembersToRemove" type="checkbox" value=@person.Id />
                    <label for="@person.Name"> @person.Name</label>
                    <br/>
                }
                <h3>Adicionar novos membros:</h3>
                <label asp-for="Members" class="control-label">Pessoas Disponiveis para Time</label><br/>
                @if (ViewBag.AvailablePeopleToTeam != null)
                    {
                    @foreach (var person in ViewBag.AvailablePeopleToTeam)
                    {
                        <input name="checkedMembersToAdd" type="checkbox" value=@person.Id>
                        <label for="@person.Name"> @person.Name</label>
                        <br />
                    }
                }
                else
                {
                    <div class="p-1 mb-2 bg-danger text-white">Nenhuma pessoa disponivel para time!</div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a listagem</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
