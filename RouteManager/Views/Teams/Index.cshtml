@model IEnumerable<RouteManager.Models.TeamViewModel>

@{
    ViewData["Title"] = "Times";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Times</h1>

<p>
    <a asp-action="Create">Adicionar Time</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @foreach (var person in @item.Members)
                    {
                        <p>@Html.DisplayFor(people => person.Name)</p>
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.City.CityRepresentation)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id },
                                                          new { onclick = $"return confirm('Deseja excluir {item.Name}?');" })
                </td>
            </tr>
        }
    </tbody>
</table>